<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:fillViewport="true"
android:padding="20dp"
android:orientation="vertical"
tools:context=".Fragments.HomeFragment">
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <Button
        android:id="@+id/button_dashboard"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:layout_alignParentRight="true"
        android:background="@drawable/round_button"
        />
    <ImageButton
        android:id="@+id/voiceBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_mic"
        android:scaleType="fitCenter"
        android:layout_alignParentLeft="true"
        android:background="@null"
        />

    <de.hdodenhof.circleimageview.CircleImageView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/button_dashboard"
        android:id="@+id/profile_image"
        android:layout_marginTop="60dp"
        android:layout_width="116dp"
        android:layout_height="116dp"
        android:src="@color/colorPrimary"
        app:civ_border_color="#FF000000"/>
    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/profile_image"
        android:layout_marginTop="30dp"
        android:textSize="26dp"
        android:text="Code Rescue"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_below="@+id/heading"
        android:layout_marginBottom="40dp"
        android:layout_marginTop="10dp"
        android:padding="15dp"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/button_victim"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:layout_margin="10dp"
            android:text="I need help" />

        <Button
            android:id="@+id/button_helper"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:layout_below="@+id/button_victim"
            android:layout_margin="10dp"
            android:text="Rescue Team Login"/>

        <Button
            android:id="@+id/button_victim_notif"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:background="@drawable/round_button"
            android:layout_below="@+id/button_helper"
            android:layout_margin="10dp"
            android:text="Victim Notifications" />

        <Button
            android:id="@+id/button_update_info"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_victim_notif"
            android:background="@drawable/round_button"
            android:layout_margin="10dp"
            android:text="Update Info" />

        <Button
            android:id="@+id/button_ar_camera"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_ar_map"
            android:background="@drawable/round_button"
            android:layout_margin="10dp"
            android:text="AR Camera" />
        <Button
            android:id="@+id/button_send_msg"
            android:layout_width="247dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/button_ar_camera"
            android:background="@drawable/round_button"
            android:layout_margin="10dp"
            android:text="Send Message" />


    </RelativeLayout>
</RelativeLayout>
</ScrollView>